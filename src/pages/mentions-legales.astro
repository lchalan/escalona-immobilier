---
/**
 * PAGE MENTIONS LÉGALES
 * Informations légales obligatoires
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';

const pageTitle = "Mentions Légales - Escalona Immobilier Lyon 2ème";
const pageDescription = "Mentions légales du site Escalona Immobilier : informations sur l'éditeur, l'hébergeur, les conditions d'utilisation et la propriété intellectuelle.";

const breadcrumbs = [
  { label: 'Accueil', href: '/' },
  { label: 'Mentions légales' }
];
---

